	leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&led_pins_vt900v2>;

		hdd {
			label = "hdd-activity";
			gpios = <&pio 3 22 GPIO_ACTIVE_HIGH>; /* PD22 */
			linux,default-trigger = "disk-activity";
		};

		err {
			label = "error";
			gpios = <&pio 3 23 GPIO_ACTIVE_HIGH>; /* PD23 */
		};

		status {
			label = "status";
			gpios = <&pio 3 24 GPIO_ACTIVE_HIGH>; /* PD24 */
			default-state = "on";
			linux,default-trigger = "heartbeat";
		};

		can-bus {
			label = "can-bus";
			gpios = <&pio 3 25 GPIO_ACTIVE_HIGH>; /* PD25 */
		};

		relay1 {
			label = "relay1";
			gpios = <&pio 4 0 GPIO_ACTIVE_HIGH>; /* PE0 */
		};
		relay2 {
			label = "relay2";
			gpios = <&pio 4 1 GPIO_ACTIVE_HIGH>; /* PE1 */
		};
		relay3 {
			label = "relay3";
			gpios = <&pio 4 10 GPIO_ACTIVE_HIGH>; /* PE10 */
		};
		relay4 {
			label = "relay4";
			gpios = <&pio 4 11 GPIO_ACTIVE_HIGH>; /* PE11 */
		};

		usb0-pwr {
			label = "usb0-pwr";  /* usb 0 (OTG) */
			gpios = <&pio 1 9 GPIO_ACTIVE_HIGH>;   /* PB9 */
			default-state = "on";
		};
		usb1-pwr {
			label = "usb1-pwr";  /* usb 1 */
			gpios = <&pio 7 14 GPIO_ACTIVE_HIGH>;   /* PH14 */  
			default-state = "on";
		};
		usb2-pwr {
			label = "usb2-pwr";  /* internal lte modem */
			gpios = <&pio 7 15 GPIO_ACTIVE_HIGH>; /* PH15 */
			default-state = "off";
		};
	};

	reg_mmc0_3v3: mmc0-3v3 {
		status = "okay";
		compatible = "regulator-fixed";
		pinctrl-names = "default";
		pinctrl-0 = <&mmc0_power_pin_vt900v2>;
		regulator-name = "mmc0-3v3-pwr";
		vin-supply = <&reg_vcc3v3>;
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		startup-delay-us = <100000>;
		regulator-always-on;
		/*regulator-boot-on; */
		gpio = <&pio 8 15 GPIO_ACTIVE_HIGH>; /* PI15 */
	};

	mmc2_pwrseq: mmc2-pwrseq {
		compatible = "mmc-pwrseq-emmc";
		reset-gpios = <&pio 2 24 GPIO_ACTIVE_LOW>;  /* PC24 */
	};
};


&de {
	status = "okay";
	/* allwinner,pipelines = <&fe0>; */
};


