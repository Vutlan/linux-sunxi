&ahci {
	status = "okay";
};

&codec {
	status = "okay";
};

&cpu0 {
	cpu-supply = <&reg_dcdc2>;
};



&gmac {
	pinctrl-names = "default";
	pinctrl-0 = <&gmac_pins_mii_17>;
	phy-handle = <&phy1>;
	phy-mode = "mii";
	status = "okay";
};

&gmac_mdio {
	phy1: ethernet-phy@0 {
		reg = <0>;
		max-speed = <100>;
	};
};



&lradc {
	vref-supply = <&reg_vcc3v0>;
	status = "okay";

	button-392 {
		label = "Unmount";
		linux,code = <KEY_VOLUMEDOWN>;
		channel = <0>;
		voltage = <392644>;
	};

	button-1184 {
		label = "Recover";
		linux,code = <KEY_ESC>;
		channel = <0>;
		voltage = <1184678>;
	};
};


&mmc0 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc0_pins>, <&mmc0_cd_pin_bananapi>;
	vmmc-supply = <&reg_mmc0_3v3>;
	bus-width = <4>;
	cd-gpios = <&pio 7 10 GPIO_ACTIVE_HIGH>; /* PH10 */
	cd-inverted;
	no-1-8-v;
	max-frequency = <25000000>;
	status = "okay";
};

&mmc2 {
	vmmc-supply = <&reg_vcc3v3>;
	mmc-pwrseq = <&mmc2_pwrseq>;
	bus-width = <4>;
	non-removable;
	/*max-frequency = <25000000>;*/
	status = "okay";

	emmc: emmc@0 {
		reg = <0>;
		compatible = "mmc-card";
		broken-hpi;
	};
};



&pio {
	vcc-pa-supply = <&reg_vcc3v3>;
	vcc-pb-supply = <&reg_vcc3v3>;
	vcc-pc-supply = <&reg_vcc3v3>;
	vcc-pd-supply = <&reg_vcc3v3>;
	vcc-pe-supply = <&reg_vcc3v3>;
	vcc-pf-supply = <&reg_vcc3v3>;
	vcc-pg-supply = <&reg_vcc3v3>;
	vcc-ph-supply = <&reg_vcc3v3>;
	vcc-pi-supply = <&reg_vcc3v3>;

	i2c4_pins_vt900v2: i2c4@0 {
		allwinner,pins = "PI2", "PI3";
		allwinner,function = "i2c4";
	};
	uart3_pins_vt900v2: uart3@1 {
		allwinner,pins = "PH0", "PH1";
		allwinner,function = "uart3";
	};
	uart7_pins_vt900v2: uart7@0 {
		allwinner,pins = "PI20", "PI21";
		allwinner,function = "uart7";
	};

	led_pins_vt900v2: led_pins@0 {
		allwinner,pins = "PD22", "PD23", "PD24", "PD25",
			"PE0", "PE1", "PE10", "PE11",
			"PB9", "PH14", "PH15";
		/*usb0-PB9, usb1-PH14, usb2-PH15*/
		allwinner,function = "gpio_out";
	};
	
	usb0_id_detect_pin_vt900v2: usb0_id_detect_pin_vt900v2@0 {
		allwinner,pins = "PH11";
		allwinner,function = "gpio_in";
		bias-pull-up;
	};
	usb0_vbus_detect_pin_vt900v2: usb0_vbus_detect_pin_vt900v2@0 {
		allwinner,pins = "PH13";
		allwinner,function = "gpio_in";
		bias-pull-down;
	};

	mmc0_cd_pin_bananapi: mmc0_cd_pin@0 {
		allwinner,pins = "PH10";
		allwinner,function = "gpio_in";
		bias-pull-up;
	};
	mmc0_power_pin_vt900v2: mmc0_power_pin@0 {
		allwinner,pins = "PI15";
		allwinner,function = "gpio_out";
		drive-strength = <20>;
	};

	gmac_pins_mii_17: gmac_mii_17@0 {
		allwinner,pins = "PA0", "PA1", "PA2",
		       "PA3", "PA4", "PA5", "PA6",
		       "PA7", "PA8", "PA9", "PA10",
		       "PA11", "PA12", "PA13", "PA14",
		       "PA15", "PA16", "PA17";
		allwinner,function = "gmac";
	};
};

&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pins>;
	status = "okay";

	axp209: pmic@34 {
		reg = <0x34>;
		interrupt-parent = <&nmi_intc>;
		interrupts = <0 IRQ_TYPE_LEVEL_LOW>;
	};
};

&i2c1 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c1_pins>;
	status = "okay";
};

&i2c2 {
	status = "okay";
};

&i2c4 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c4_pins_vt900v2>;
	status = "okay";
};

#include "axp209.dtsi"

&ac_power_supply {
	status = "okay";
};

&reg_dcdc2 {
	regulator-always-on;
	regulator-min-microvolt = <1000000>;
	regulator-max-microvolt = <1400000>;
	regulator-name = "vdd-cpu";
};

&reg_dcdc3 {
	regulator-always-on;
	regulator-min-microvolt = <1000000>;
	regulator-max-microvolt = <1400000>;
	regulator-name = "vdd-int-dll";
};

&reg_ldo1 {
	regulator-name = "vdd-rtc";
};

&reg_ldo2 {
	regulator-always-on;
	regulator-min-microvolt = <3000000>;
	regulator-max-microvolt = <3000000>;
	regulator-name = "avcc";
};

&reg_vcc3v0 {
	status = "okay";
	regulator-always-on;
};

&reg_vcc3v3 {
	status = "okay";
	regulator-always-on;
};
&reg_vcc5v0 {
	status = "okay";
	regulator-always-on;
};


