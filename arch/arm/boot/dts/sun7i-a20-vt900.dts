*/


	tve0: tv-encoder@1c0a000 {
		compatible = "allwinner,sun4i-a10-tv-encoder";
		reg = <0x01c0a000 0x1000>;
		clocks = <&ccu CLK_AHB_TVE0>, <&ccu CLK_DRAM_TVE0>;
		clock-names = "ahb", "ram";
		resets = <&ccu RST_TVE0>;
		status = "okay";
		port {
			#address-cells = <1>;
			#size-cells = <0>;
			
			hdmi_in_tcon0: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&tcon0_out_hdmi>;
			};
			hdmi_in_tcon1: endpoint@1 {
				reg = <1>;
				remote-endpoint = <&tcon1_out_hdmi>;
			};
		};
	};

/*	tve1: tv-encoder@1c1b000 {
		compatible = "allwinner,sun4i-a10-tv-encoder";
		reg = <0x01c1b000 0x1000>;
		clocks = <&ccu CLK_AHB_TVE1>, <&ccu CLK_DRAM_TVE1>;
		clock-names = "ahb", "ram";
		resets = <&ccu RST_TVE1>;
		status = "okay";

		port {
			#address-cells = <1>;
			#size-cells = <0>;

			hdmi_in_tcon1: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&tcon1_out_hdmi>;
			};
		};
	};    */

	tvd: tv-decoder@1c08000 {
		compatible = "allwinner,sun4i-a10-tv-decoder";
		reg = <0x01c08000 0x1000>;
		clocks = <&ccu CLK_AHB_TVD>, <&ccu CLK_TVD>,
			<&ccu CLK_TVD_SCLK2>, <&ccu CLK_DRAM_TVD>,
			<&ccu CLK_PLL_VIDEO0>, <&ccu CLK_PLL_VIDEO1>;
		clock-names = "ahb", "sclk1",
			"sclk2", "ram",
			"pll0", "pll1";
		interrupts = <GIC_SPI 61 IRQ_TYPE_LEVEL_HIGH>;
	};


/*
	hdmi-connector {
		compatible = "hdmi-connector";
		type = "a";

		port {
			hdmi_con_in: endpoint {
				remote-endpoint = <&hdmi_out_con>;
			};
		};
